generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String  @unique
  hashedPassword String?
  role           String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Issue {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  rollNo      String
  department  String
  roomNo      String
  issueTitle  String
  issueDesc   String
  issueStatus String
  isPRO       Boolean @default(true)
  isPrincipal Boolean @default(false)
  isED        Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
